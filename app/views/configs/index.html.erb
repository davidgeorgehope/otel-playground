  <p class="page-subtitle">Browse and share OpenTelemetry Collector configurations.</p>

  <% if @configs.any? %>
    <div class="config-list">
      <% @configs.each do |config| %>
        <a href="<%= config_path(config.share_token) %>" class="config-card">
          <div class="config-card-info">
            <h3><%= config.name %></h3>
            <p><%= truncate(config.description || "No description", length: 100) %></p>
          </div>
          <div class="config-card-meta">
            <div>ğŸ‘ <%= config.views_count %> views</div>
            <div><%= time_ago_in_words(config.created_at) %> ago</div>
          </div>
        </a>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <div class="icon">ğŸ“¦</div>
